<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.MakeResultActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMakeResultActivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/deep_blue"
        app:popupTheme="@style/Theme.PopupOverlay"/>

    <!-- ScrollView for making all content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Parent Linear Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center_horizontal">

            <!-- Image Section -->
            <ImageView
                android:id="@+id/iv_add_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_result_placeholder"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Image"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:padding="8dp" />

            <!-- CardView containing all TextInput fields -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Term Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CustomTextInputLayout"
                        android:layout_marginTop="8dp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_term"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Term"
                            android:textColor="@color/grey"
                            android:inputType="textPersonName"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- English Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CustomTextInputLayout"
                        android:layout_marginTop="8dp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_english"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="English"
                            android:textColor="@color/grey"
                            android:inputType="numberDecimal"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Maths Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CustomTextInputLayout"
                        android:layout_marginTop="8dp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_maths"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Maths"
                            android:textColor="@color/grey"
                            android:inputType="numberDecimal"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Science Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CustomTextInputLayout"
                        android:layout_marginTop="8dp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_science"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Science"
                            android:textColor="@color/grey"
                            android:inputType="numberDecimal"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Social Science Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CustomTextInputLayout"
                        android:layout_marginTop="8dp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_social_science"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Social Science"
                            android:textColor="@color/grey"
                            android:inputType="numberDecimal"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Hindi Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CustomTextInputLayout"
                        android:layout_marginTop="8dp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_hindi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hindi"
                            android:textColor="@color/grey"
                            android:inputType="numberDecimal"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Computer Science Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CustomTextInputLayout"
                        android:layout_marginTop="8dp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_computer_science"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Computer Science"
                            android:textColor="@color/grey"
                            android:inputType="numberDecimal"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Add Result Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:text="Add Result"
                android:backgroundTint="@color/deep_blue"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:cornerRadius="10dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
