<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_background"
    tools:context=".activities.AttendanceActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAttendanceActivity"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/deep_blue"
        android:theme="@style/ToolBarTheme"
        android:titleTextColor="@color/textColorPrimary" />

    <!-- RecyclerView for Absence Dates -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_absence_dates"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        tools:listitem="@layout/absence_item"
        android:layout_marginTop="8dp" />

</LinearLayout>
